{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "rootDir": "src",
    "module": "commonjs",
    "sourceMap": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src",
  ]
}